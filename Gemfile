# source 'http://rubygems.org'
source 'http://ruby.taobao.org'

gem 'rails', '3.1.0'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', '  ~> 3.1.0'
  gem 'coffee-rails', '~> 3.1.0'
  gem 'uglifier'
  gem 'haml_coffee_assets'
  gem "less-rails"
  gem 'twitter-bootstrap-rails'
end

group :test, :development do
  gem 'capistrano'
  gem 'rvm-capistrano'
  gem 'rspec-rails'
  gem 'guard-livereload', '~> 0.3.1'
  gem 'twitter-bootstrap-rails'
end

group :test do
  gem 'factory_girl_rails', :require => false # generate model during testing
  gem 'spork', '~> 0.9.0.rc9'                 # preload fixed rails resouces
  gem 'guard-rspec', '~> 0.4.4'               # auto run rspec upon file changes
  gem 'cucumber-rails', '~> 1.0.5'
  gem 'database_cleaner', '~> 0.6.7'          # cucumber rails needs this
end

# Omniauth
gem 'omniauth'
gem 'omniauth-oauth'
gem 'omniauth-oauth2'
gem 'omniauth-qq'
gem 'omniauth-renren'
gem 'omniauth-weibo-oauth2'

gem 'execjs'                 # javascript runtime
gem 'therubyracer'
gem 'devise'                 # authentication system
gem 'rails-backbone'
gem 'jquery-rails'
gem 'fancybox-rails'
gem 'formtastic', '~> 2.0.0'
gem 'haml', '~> 3.1.3'
gem 'paperclip'
gem 'kaminari'
gem 'rails_kindeditor'
gem 'mysql2'
gem 'yaml_db'
gem 'spreadsheet'
