@import "common";

#question_page {
  padding: 0;
  background: #fffff0;

  .page_header {
    background: #ff6000;
    color: #fff;
    display: table;
    height: 40px;
    width: 100%;
    .header_item {
      display: table-cell;
      vertical-align: middle;
      height: 100%;
      line-height: 100%;
      padding: 10px;
      img {
        height: 30px;
      }
    }
    .title {
      width: 60%;
      font-size: 1.4em;
      vertical-align: middle;
      text-align: center;
      height: 100%;
      line-height: 100%;
    }
    .left_link {
      width: 20%;
      text-align: left;
    }
    .right_link {
      width: 20%;
      text-align: right;
    }
  }

  .fr {
    float: right;
  }
}

#question_set_panel {
  background: #fffff0;

  #no_question_notice {
    text-align:center;
    display:none;
  }
  .ui-li-thumbnail {
    margin: 10px 10px 10px 40px;
  }
  .ui-li-heading {
    position: relative;
    left: 8px;
    margin: 0;
  }
  .ui-li-desc {
    position: relative;
    left: 8px;
    height: 30px;
    white-space: normal;
    margin: 2px 0 0;
  }
  .left-icon {
    position: absolute;
    left: 8px;
    top: 27px;
    width: 24px;
  }
}

.login_partial{
  padding: 30px 30px 20px;
  .register {
    text-align: right;
    a {
      font-weight: bold;
      color: $brown;
      text-decoration: underline;
      font-size: 9pt;
    }
  }
  .login_link {
    display: block;
    float: left;
    background: $brown;
    padding: 2px 10px 2px 10px;
    width: 30px;
    text-align: center;
    a {
      font-size: 9pt;
      color: $white;
    }
  }
  a.auth {
    color: $white;
    background-color: $light_blue;
    display: block;
    font-size: 10pt;
    margin-bottom: 10px;
    padding: 5px 0px 5px 18px;

    img {
      vertical-align: top;
      height: 18px;
      margin-right: 10px;
    }

    &:hover {
      background-color: #fcfcf0;
      color: $grey;
    }
  }
  p.login_notice {
    margin: 10px
  }
}

.user_stats {
  color: $dark_grey;
  font-size: 12pt;
  .photo{
    img {
      height: 80px;
      width: 80px;
    }
    float: left;
    height: 80px;
    width: 80px;
    border: 1px $blue solid;
    margin-right: 20px;
  }
  .info {
    text-align: top;
    .name {
      line-height: 30px;
      color: $brown;
    }
    .type {
      font-size: 10pt;
      line-height: 30px;
    }
    .settings_link {
      font-size: 10pt;
      display: inline;
      line-height: 20px
    }
    .logout_link {
      .ui-btn {
        padding-top: 5px;
        padding-bottom: 5px;
      }
      input {
        font-size: 10pt;
        height: 15px;
      }
      width: 95px;
      text-align: right;
      display: inline-block;
      zoom: 1;
      *display: inline;
    }
  }

  .stats {
    margin: 30px 0px 20px;
    zoom: 1;
    position: relative;
    background: $white;
    border: 1px solid $grey_border;
    @include rounded_corner(2px);
    @include gradient(#fcfcfc, #f4f4f4);
    padding: 10px 0px;
    line-height: 14px;
    table {
      td {
        text-align: center;
        width: 86px;
      }
      .bordered {
        border-right: 1px solid $grey_border;
      }
      .labels {
        line-height: 25px;
        color: $brown;
        font-size: 12pt;
      }
      .numbers {
        line-height: 45px;
        color: $orange;
        font-size: 14pt;
      }
      .subscripts {
        font-size: 10pt;
      }
    }
    .answer_limit {
      display: inline;
      line-height: 13px;
      vertical-align: bottom;
    }
  }

  .badge_label {
    line-height: 35px;
    color: $orange;
    border-bottom: 1px solid $grey_border;
  }

  .badges {
    vertical-align: top;
    line-height: 15px;
    margin: 15px 0px;
    padding-left: 2px;
    color: $brown;
  }
}
