width: 100%;

.project_block {
  zoom: 1.0;
  position: relative;

  @include shadow(0px, 0px, 3px, #e0e0e0);
  background-color: $white;
  margin: 0px 0px 10px;
  width: 100%;
  .project_block_wrapped {
    height: 120px;
    position: relative;
    //padding: 10px;
  }
  .project_image {
    position: absolute;
    z-index: 10;
    overflow: hidden;
    height: 150px;
    img {
      width: 100%;
      height:auto;
    }
  }
  .past_image {
    img {
      @include opacity(0.3);
    }
  }
