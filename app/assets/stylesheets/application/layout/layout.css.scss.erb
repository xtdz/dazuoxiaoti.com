@import "common";

body {
  @include colored_link;
}

.wrap {
  width: $width;
  margin-left: auto;
  margin-right: auto;
}
.bwrap{
  width: $width;
  top:-40px;
  margin-left: auto;
  margin-right: auto;
  margin-top:20px;
  padding:0px;
 
}

.main {
}

.project_banner {
  position: relative;
  top: 30px;
  left: -25px;
  height: 230px;
  width: 1000px;
  z-index: -100;
}

.project_header {
  height: 120px;
  text-align: left;
  .logo {
    width: 100px;
    padding: 60px 0px 0px 40px;
    float: left;
  }
  .spnsr_logo {
    float: right;
    margin-top: 40px;
    width: 200px;
    text-align: center;
    height: 120px;
    line-height: 120px;
    img {
      vertical-align: middle;
    }
  }
}

.header {
  height: 160px;
  text-align:center;
  .logo {
    padding-top: 60px;
  }
  .motto {
    margin-top: 10px;
  }
}


.top_nav,.index_nav{
  zoom: 1.0;
  #position: fixed;
  z-index: 90;
  width: 100%;
  top: 0px;
  height: 40px;
  background: $orange 0px 0px repeat-x;
  @include gradient( #ff9933, #ff8000);
  @include opacity(0.9);
  @include shadow(0px, 0px, 3px, #a0a0a0);
  .wrap {
    max-width: 940px;
    height: 100%;
  }
}

.columns {
  clear: both;
  padding-top: 2px;
}

.dashboard {
  margin-top: 40px;
}

.footer {
  clear:both;
  margin: 100px auto 0px auto;
  padding: 40px 0px 20px 0px;
  color: $grey;
  text-align: center;
  font-size: 10pt;
  @include colored_link($grey, $grey, $grey);
  a { font-size:10pt;}
}

body.mobile {
  .header {
    background: linear-gradient(#ff9933, #ff8000);
    text-align: center;
    position: absolute;
    width: 100%;
    height: 40px;
    line-height: 40px;
    color: white;
    font-size: 20px;
  }
  .project_left {
    width: auto;
  }
  .project_right {
    display: none;
  }
  .footer {
    margin-top: 0;
    padding: 20px;
  }
}
