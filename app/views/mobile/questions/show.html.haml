.columns
  .question_left
    .content
      - if @project.project_kind.to_i==2
        = render :partial => 'mobile/questions/question', :locals => {:question => @question, :choices => @choices}
      - else
        - if session[:show_share] and session[:show_share][current_project.id]
          - session[:show_share].delete current_project.id
          = render :partial => 'mobile/questions/share'
        - else
          = render :partial => 'mobile/questions/question', :locals => {:question => @question, :choices => @choices}
  .clear