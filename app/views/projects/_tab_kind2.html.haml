.project_tab.tab.displayed
  .project_tag
    = project.equation
  .project_explanation
    = project.tagline
  .project_numbers
    .project_coordinator
      .coordinator_label
        =project.coordinator_label
      .coordinator_logo
        %a.image{:href => "http://www.fordgreen.com.cn/", :style=>"margin-top:10px",:target => "_blank", :onclick=>"_gaq.push(['_trackEvent', 'Outbound', 'Sponsor', 'project_tab']);"}
          = image_tag(organization_image_path(project.sponsor), :alt => project.sponsor.name)
    .project_stats
      .stat_row
        %span.numbers.participation_count #{project.participation_count}人
        已参与
      .stat_row
        累计答对
        %span.numbers.correct_count #{project.correct_count}题
  .clear
