.project_block
  // yuren
  .project_block_wrapped{class: "displayed block_yuren", id: "project_block_yuren"}
    .project_image= image_tag asset_path('static/yuren/slide.jpg')
    .project_screen
    .project_overview
      .project_title
        YU益·小题大作资助专场
      .project_equation
        公益无小题，YU益大作为
      .project_buttons
        %a.btn.blue{:href => yue_path, :class => "button_left"} 查看详情
        %a.btn.white{:href => "http://www.yu-e.org", :class => "button_right", :target => "_blank"} 访问YU益
    .clear

  - projects.each do |p|
    = render :partial => 'projects/project_block', :locals => {project: p, show: default_project==p ? true : false}
  - past_projects.each do |pp|
    = render :partial => 'projects/past_project_block', :locals => {project: pp, show: false}
  .project_slide_control
    .project_slide_icon{class: "selected"}
      = link_to image_tag(asset_path('static/yuren/slide.jpg')), '#', name: '.block_yuren', class: 'project_icon'
      .icon_frame
    - projects.each do |p|
      .project_slide_icon{class: default_project==p ? "selected" : ""}
        = link_to image_tag(project_image_path(p, :main)), '#', name: '.block_'+p.id.to_s, class: 'project_icon'
        .icon_frame
    - past_projects.each do |p|
      .project_slide_icon
        = link_to image_tag(project_image_path(p, :main)), '#', name: '.block_'+p.id.to_s, class: 'project_icon'
        .icon_frame
          = link_to '已结束', '#', name: '.block_'+p.id.to_s, class: 'finished_label'
    .project_slide_more
      = link_to image_tag(asset_path('static/more.png')), projects_path
    .clear
  .clear